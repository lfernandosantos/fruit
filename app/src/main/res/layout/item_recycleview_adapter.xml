<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="1dp">

    <RelativeLayout
       android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginLeft="8dp"
            android:id="@+id/fruitImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/blankspinner" />

        <TextView
            android:id="@+id/txViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fruitImage"
            android:layout_marginTop="14dp" />

        <TextView
            android:textSize="18sp"
            android:text="Price: "
            android:textStyle="bold"
            android:id="@+id/txViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txViewName"
            android:layout_alignStart="@+id/txViewName"
            android:layout_marginTop="18dp" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/textViewUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txViewPrice"
            android:layout_toEndOf="@+id/txViewPrice"
            android:layout_alignTop="@+id/txViewPrice" />
    </RelativeLayout>

</android.support.v7.widget.CardView>